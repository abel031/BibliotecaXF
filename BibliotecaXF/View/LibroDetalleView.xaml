<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BibliotecaXF.View.LibroDetalleView">

    <StackLayout>
        <Label Text="Titulo"></Label>
        <Entry Text="{Binding LibroSeleccionado.Titulo}"></Entry>
        <Label Text="ISBN"></Label>
        <Entry Text="{Binding LibroSeleccionado.ISBN}"></Entry>
        <Label Text="Genero"></Label>
        <Entry Placeholder="Genero" Text="{Binding LibroSeleccionado.Genero}"></Entry>
        <Label Text="Prestat"></Label>
        <CheckBox IsChecked="{Binding LibroSeleccionado.Prestado}"></CheckBox>

    </StackLayout>

</ContentPage>
